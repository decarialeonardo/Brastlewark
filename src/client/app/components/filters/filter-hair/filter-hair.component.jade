.filter-item
  .filter-header
    span.icon.icon-day-night
    | Hair Color
  .filter-container.checkbox-list
    .inner
      label(ng-repeat='color in ctrl.colors()')
        input(type='checkbox' name='ctrl.selectedColors[color]' ng-model="ctrl.selectedColors[color]" id='check-{{color}}' value='{{color}}' ng-click='ctrl.toggleSelection(color)')
        span.txt {{color}}